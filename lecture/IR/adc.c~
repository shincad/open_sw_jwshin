#define BIT_SET(ADDRESS,BIT)    (ADDRESS |= (1<<BIT))
#define BIT_CLR(ADDRESS,BIT)    (ADDRESS &= ~(1<<BIT))

unsigned int adc[1];

unsigned char LData;
unsigned char DisCnt;


#define ADC_VREF_TYPE ((0<<REFS1) | (0<<REFS0) | (0<<ADLAR))

// ADC interrupt service routine
interrupt [ADC_INT] void adc_isr(void)
{
unsigned int adc_data;
// Read the AD conversion result
adc_data=ADCW;
// Place your code here

adc[0] = adc_data;

}



void putch(char data)
{
    while(!(UCSR0A & 0x20));
    UDR0 = data;
}

char getch(void)
{
    while(!(UCSR0A & 0x80));
    return UDR0;
}


void Hex(unsigned char Val)
{
    unsigned char Data;
    Data = Val;
    LData = Data;
    Data = (Data>>4) &0x0f;
    if(Data>9) {
        Data += 0x37;
    }
    else {
        Data += 0x30;
    }
    putch(Data);
    Data = LData & 0x0f;
    if(Data>9) {
        Data += 0x37;
    }
    else {
        Data += 0x30;
    }
    putch(Data);
}


void MUX_input()
{
    ADMUX &= 0xe0;
    ADMUX = 0;
    ADCSRA |= 0x40;
}

void Action()
{
  unsigned char FirstData;
  //putch(adc[0]);
  FirstData = adc[0];
  delay_ms(30);
  Hex(adc[0]);   
  putch(0x20);
  DisCnt++;
  if(DisCnt==16) {
    putch(0x0d);
    putch(0x0a);
    DisCnt=0;
  }      
   
}




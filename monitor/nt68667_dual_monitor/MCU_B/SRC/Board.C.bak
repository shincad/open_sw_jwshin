bit IsPanelPowerOn(void)
{
	if((PortA & BIT_0)!= 0){
		return ON;
	}
	else{
		return OFF;
	}
}

bit IsBackLightOn(void)
{
	if((PortC & BIT_4) == 0){
		return TRUE;
	}
	else{
		return FALSE;
	}
}

bit IsVGAconnected(void)
{
	if((PortD & BIT_6) == 0){
		return TRUE;
	}
	else{
		return FALSE;
	}
}

